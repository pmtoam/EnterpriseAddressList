<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99cccccc" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:text="企业通讯录  v1.0\n\n本应用支持来电显示德佑员工基础信息\n\n后续将支持：组织架构查询、员工搜索"
            android:textColor="#959595" />

        <EditText
            android:id="@+id/et_keywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_keywords"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="组织架构查询：可输入姓名、工号、手机号码、部门、分行名称、职位"
            android:textSize="15sp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lv_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/et_keywords" />
    </RelativeLayout>

</RelativeLayout>